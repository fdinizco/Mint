<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="SlotGroups.Resources.Styles">
    
    <!--SafeArea to iOS bottom -->
    <Style x:Key="SafeAreaGrid" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Padding" Value="{x:OnPlatform iOS='0,0,0,34', Android='0'}" />
    </Style>
    
    <!--Navigation bar style -->
    <Style x:Key="NavigationPageTextStyle" TargetType="Label">
            <Setter Property="FontSize" Value="24" />
    </Style>
    
    
</ResourceDictionary>